{
  "manifest_version": 3,
  "name": "FB Marketplace Car Overlay (MVP)",
  "version": "0.4.0",
  "description": "Overlays vehicle snapshot (year/make/model, price, mileage) on Facebook Marketplace listings.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.facebook.com/*", "https://car-bot.car-bot.workers.dev/*"],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/marketplace/item/*"],
      "js": ["src/utils.js", "src/extract.js", "src/overlay.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
